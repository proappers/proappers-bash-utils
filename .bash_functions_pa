#
## bash functions collection
#


# find in files names

function h2find {
	find . -iname "*$1*" -type f
}


# find in directories names

function h2dfind {
	find .  -iname "*$1*" -type d
}

# TODO: problems with escaping the *, try set -f or GLOBIGNORE=*
